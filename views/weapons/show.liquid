{% layout 'layout.liquid' %}
{% block content %}
<div class="container-md">
    <article>
        <h2>
            {{ weapons.title }} 
        </h2>
        <h3>Lore: {{ weapons.lore }}</h3>
        <h6>Rounds Per Minute: {{ weapons.rpm }}</h6>
        <h6>Impact: {{ weapons.impact }}</h6>
        <h6>Range: {{ weapons.range }}</h6>
        <h6>Stability: {{ weapons.stability }}</h6>
        <h6>Handling: {{ weapons.handling }}</h6>
        <h6>Reload Speed: {{ weapons.reload_speed }}</h6>
        <h6>Magazine Size: {{ weapons.magazine }}</h6>
        <h6>Exotic Perk: {{ weapons.exotic_perk }}</h6>
        <h6>Perk: {{ weapons.perk }}</h6>
        {% if example.owner == userId %}
        <div class="btn-group">

            <a href="/weapons/{{ weapons.id }}/edit" class="btn btn-primary">Edit</a>
            <form action="/weapons/{{ weapons.id }}?_method=DELETE" method="POST">
                <input type="submit" value="Delete" class="btn btn-danger">
            </form>
        </div>
        {% endif %}
    </article>
</div>
{% endblock %}